{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "outDir": "dist",
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "types/**/*"],
}
